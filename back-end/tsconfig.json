{
	"compilerOptions": {
        "types": ["node", "express"],
		"target": "ES2020",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist"
	},
	"include": ["types.d.ts", "src/**/*"],
    "exclude": ["node_modules"]
}